{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
</header>

<div class="container">
    <main class="content" role="main">
        <article class="{{post_class}}">

            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
                <section class="post-meta">
                    
                    <div class="post-tags mb-1">
                        {{#if tags}}    
                            {{#foreach tags}}
                                <a href="{{url}}" title="{{name}}" class="tag label-tag">{{name}}</a>
                            {{/foreach}}
                        {{/if}}
                    </div>
                </section>
            </header>

            <section class="post-content">
                {{content}}
                
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD, YYYY"}}</time>
            </section>
            
            <footer class="post-footer">
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        {{!-- Everything inside the #author tags pulls data from the author --}}
                        {{#author}}

                            

                            <section class="author">
                                {{#if image}}
                                    <figure class="author-image float-md-left float-xs-left">
                                        <a class="img" href="{{url}}" alt="{{name}}'s Picture"><img src="{{image}}" class="rounded-circle" /></a>
                                    </figure>
                                {{/if}}
                                <div class="author-meta">
                                    <h4><a href="{{url}}">{{name}}</a></h4>
                                    {{#if location}}<div>{{location}}</div>{{/if}}
                                    {{#if website}}<div><a href="{{website}}">{{website}}</a></div>{{/if}}
                                </div>
                                
                            </section>

                        {{/author}}
                    </div>
                    <div class="col-md-6">
                        <section class="share">
                            <h4>Share this post</h4>
                            <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                <span class="hidden">Twitter</span>
                            </a>
                            <a class="icon-linkedin" href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}&summary=&source="
                                onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                <span class="hidden">LinkedIn</span>
                            </a>
                            <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                <span class="hidden">Facebook</span>
                            </a>
                        </section>
                    </div>
                </div>
            </footer>   

        </article>
    </main>

    <aside class="row read-next">
        {{#next_post}}
        <div class="col-md-6">
            <h6 class="text-md-center">Next Up</h6>
            <a class="read-next-story {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
                <section class="post">
                    <h2>{{title}}</h2>
                    <p>{{excerpt words="19"}}&hellip;</p>
                </section>
            </a>
        </div>
        {{/next_post}}
        {{#prev_post}}
        <div class="col-md-6">
            <h6 class="text-md-center">Prev Story</h6>
            <a class="read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
                <section class="post">
                    <h2>{{title}}</h2>
                    <p>{{excerpt words="19"}}&hellip;</p>
                </section>
            </a>
        </div>
        {{/prev_post}}
    </aside>

{{/post}}


